<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:id="@+id/displayAnswer"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:text="0"
        android:textSize="70dp"
        android:layout_height="120dp"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@id/displayAnswer"
        android:text="Clear"
        android:textSize="10dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#FF0D00"
        android:onClick="clear"/>

    <Button
        android:id="@+id/scientific"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@id/displayAnswer"
        android:layout_toRightOf="@id/clear"
        android:text="Scientific"
        android:textSize="10dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#0190AB"
        android:onClick="scientific"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/clear"
        android:text="7"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#D3D3D3"
        android:onClick="seven"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/clear"
        android:layout_toRightOf="@id/seven"
        android:text="8"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#BDBDBD"
        android:onClick="eight"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/clear"
        android:layout_toRightOf="@id/eight"
        android:text="9"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#D3D3D3"
        android:onClick="nine"/>

    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/seven"
        android:text="4"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#BDBDBD"
        android:onClick="four"/>

    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/eight"
        android:layout_toRightOf="@id/four"
        android:text="5"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#D3D3D3"
        android:onClick="five"/>

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/nine"
        android:layout_toRightOf="@id/five"
        android:text="6"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#BDBDBD"
        android:onClick="six"/>

    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/clear"
        android:layout_toRightOf="@id/six"
        android:text="รท"
        android:textSize="50dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#E37600"
        android:onClick="div"/>

    <Button
        android:id="@+id/mult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/div"
        android:layout_toRightOf="@id/six"
        android:text="ร"
        android:textSize="40dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#FF8900"
        android:onClick="mult"/>

    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/four"
        android:text="1"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#D3D3D3"
        android:onClick="one"/>

    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/five"
        android:layout_toRightOf="@id/one"
        android:text="2"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#BDBDBD"
        android:onClick="two"/>

    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/six"
        android:layout_toRightOf="@id/two"
        android:text="3"
        android:textSize="50dp"
        android:typeface="sans"
        android:background="#D3D3D3"
        android:onClick="three"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/mult"
        android:layout_toRightOf="@id/three"
        android:text="-"
        android:textSize="50dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#E37600"
        android:onClick="sub"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/one"
        android:text="0"
        android:textSize="50dp"
        android:typeface="sans"
        android:textColor="#000000"
        android:background="#BDBDBD"
        android:onClick="zero"/>

    <Button
        android:id="@+id/period"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/two"
        android:layout_toRightOf="@id/zero"
        android:text="."
        android:textSize="50dp"
        android:typeface="sans"
        android:textColor="#000000"
        android:background="#D3D3D3"
        android:onClick="period"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/three"
        android:layout_toRightOf="@id/period"
        android:text="="
        android:textSize="50dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#E37600"
        android:onClick="equal"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/sub"
        android:layout_toRightOf="@id/equal"
        android:text="+"
        android:textSize="40dp"
        android:typeface="sans"
        android:textColor="#FFFFFF"
        android:background="#FF8900"
        android:onClick="add"/>

</RelativeLayout>